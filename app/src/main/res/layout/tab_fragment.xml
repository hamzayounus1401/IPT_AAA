<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">


    <com.alespero.expandablecardview.ExpandableCardView
        android:id="@+id/t_f_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="25dp"
        app:animationDuration="300"
        app:expandOnClick="true"
        app:icon="@drawable/arrow_down"
        app:inner_view="@layout/mycustomview"
        app:startExpanded="false"
        app:title="Quiz/Activity/Presentation/etc" />


    <com.alespero.expandablecardview.ExpandableCardView
        android:id="@+id/t_f_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:animationDuration="300"
        app:expandOnClick="true"
        app:icon="@drawable/arrow_down"
        app:inner_view="@layout/my_mid_layout"
        app:startExpanded="false"
        app:title="Mids" />

    <com.alespero.expandablecardview.ExpandableCardView
        android:id="@+id/t_f_p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:animationDuration="300"
        app:expandOnClick="true"
        app:icon="@drawable/arrow_down"
        app:inner_view="@layout/mycustomview"
        app:startExpanded="false"
        app:title="Final" />

    <com.alespero.expandablecardview.ExpandableCardView
        android:id="@+id/t_f_p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:animationDuration="300"
        app:expandOnClick="true"
        app:icon="@drawable/arrow_down"
        app:inner_view="@layout/mycustomview"
        app:startExpanded="false"
        app:title="Grand Total" />


</LinearLayout>